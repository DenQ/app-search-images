{{#if route.linkable}}
  {{#if route.param}}
    {{#link-to route.path route.param class=linkClass}}
      {{route.title}}
    {{/link-to}}
  {{else}}
    {{#link-to route.path class=linkClass}}
      {{#if hasBlock}}
        {{yield this route}}
      {{else}}
        {{route.title}}
      {{/if}}
    {{/link-to}}
  {{/if}}
{{else}}
  {{#if hasBlock}}
    {{yield this route}}
  {{else}}
    {{route.title}}
  {{/if}}
{{/if}}
