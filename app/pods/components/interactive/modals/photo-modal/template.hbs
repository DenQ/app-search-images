{{#bs-modal open=open size="lg" onHide=(action "onHide") as |modal|}}
  {{#modal.header}}
    <h4 class="modal-title">Show image</h4>
  {{/modal.header}}

  {{#modal.body}}
    <div class="modal-photo-body">
      <img src="{{model.source}}">
    </div>
  {{/modal.body}}

  {{#modal.footer as |footer|}}
    {{#bs-button onClick=(action modal.close) type=""}}Close{{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
