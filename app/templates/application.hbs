<div class="container-fluid">

  {{#bs-navbar
    fluid=true
    collapsed=collapsed
    type=(if inverse 'inverse')
    onCollapse=(action (mut collapsed) true)
    onExpand=(action (mut collapsed) false) as |navbar|
  }}
    <div class="navbar-header">
      {{navbar.toggle}}
      {{#link-to "index" class="navbar-brand"}}Search Images{{/link-to}}
    </div>
    {{#navbar.content}}
      {{#navbar.nav as |nav|}}
        {{#nav.item}}{{#nav.link-to "index"}}Home{{/nav.link-to}}{{/nav.item}}
        {{#nav.item}}{{#nav.link-to "index"}}Navbars{{/nav.link-to}}{{/nav.item}}
      {{/navbar.nav}}
    {{/navbar.content}}
  {{/bs-navbar}}

  {{outlet}}
</div>
